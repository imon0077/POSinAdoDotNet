@model SoftifyFoodPOSNew.Models.LoginUser
@{
    ViewBag.Title = "Edit user";
}
<header class="page-header">
    <h2>@ViewBag.Title</h2>
</header>
<!--Error messages will be shown here-->

@using (Html.BeginForm("Edit", "LoginUser", FormMethod.Post, new { @class = "form-horizontal", name = "frmLoginUser" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.LUserId)
    <section class="panel">
        @{
            bool IsInactive = false;
            if (Model != null)
            { IsInactive = Model.IsInactive; }

        }
        <div class="panel-body plr-xlglg">
            <div class="row col-md-8">

                <div class="form-group row">
                    <div class="col-md-4">
                        <label class="control-label pull-right">User Name :</label>
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @required = "required", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label class="control-label pull-right">Password :</label>
                    </div>
                    <div class="col-md-8">
                        @Html.PasswordFor(model => model.UserPass, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.UserPass)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label class="control-label pull-right">Display Name :</label>
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.DisplayName, new { @class = "form-control", @autocomplete = "off", @required = "required" })
                        @Html.ValidationMessageFor(model => model.DisplayName)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label class="control-label pull-right">Reference :</label>
                    </div>
                    <div class="col-md-8">
                        @Html.DropDownList("RefId", new SelectList(ViewBag.RefList, "Id", "Name"), "=Select Reference=", new { @class = "form-control", @required = "required", @data_plugin_selectTwo = "", ng_model = "model.RefId", @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.RefId)

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                        <label class="control-label pull-right">Branch :</label>
                    </div>
                    <div class="col-md-8">
                        @Html.DropDownList("BranchId", new SelectList(ViewBag.BranchList, "Id", "Name"), "=Select Branch=", new { @class = "form-control", @required = "required", @select2 = "", ng_model = "model.BranchId", @style = "width:100%" })
                        @Html.ValidationMessageFor(model => model.BranchId)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                    </div>

                    <div class="col-md-3">
                        <div class="checkbox-default checkbox-inline">
                            @Html.CheckBoxFor(m => m.IsInactive, IsInactive)
                            <label for="IsSalary">Is Inactive</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="panel-footer">
            <div class="row">
                <div class="col-sm-9 col-sm-offset-4">
                    <a href="@Url.Action("Index", "LoginUser")" class="btn btn-primary">
                        <i class="fa fa-arrow-circle-left"></i> Back to list
                    </a>
                    <button class="btn btn-success btn-wide" type="submit" name="btnSubmit" id="">
                        Submit <i class="fa fa-arrow-circle-right"></i>
                    </button>

                </div>
            </div>
        </footer>


    </section>
            }
