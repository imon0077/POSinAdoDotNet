@using System.Data
@model SoftifyFoodPOSNew.Models.LoginUser

@{
    ViewBag.Title = "Details";
    DataRow dr = (DataRow)ViewBag.Detais;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title">User - Details</h3>
        </div>
        <div class="panel-body">
            @Html.HiddenFor(model =>model.LUserId)
            @Html.ValidationSummary(true)
            <div class="form-group row">
                <div class="col-md-2">
                    <label class="control-label pull-right">User Name :</label>
                </div>
                <div class="col-md-10">
                    @Html.Label(@dr["UserName"].ToString(), new { @class = "control-label" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2">
                    <label class="control-label pull-right">Display Name :</label>
                </div>
                <div class="col-md-10">
                    @Html.Label(@dr["DisplayName"].ToString(), new { @class = "control-label" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2">
                    <label class="control-label pull-right">User Category :</label>
                </div>
                <div class="col-md-10">
                    @Html.Label(@dr["CatName"].ToString(), new { @class = "control-label" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-2">
                    <label class="control-label pull-right">Status :</label>
                </div>
                <div class="col-md-10">
                    @Html.Label(@dr["IsInactive"].ToString(), new { @class = "control-label" })
                </div>
            </div>
        </div>
        <div class=" panel-footer clearfix">
            <div>
                <div class="col-md-2">
                    @Html.ActionLink("Edit", "Edit", new { id = @dr["LUserId"].ToString() }, new { @class = "btn btn-warning btn-block" })
                </div>
                <div class="col-md-2">
                    @Html.ActionLink("Delete", "Delete", new { id = @dr["LUserId"].ToString() }, new { @class = "btn btn-danger btn-block" })
                </div>
                <div class="col-md-2">
                    @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-info btn-block" })
                </div>
            </div>
        </div>
    </div>
}
