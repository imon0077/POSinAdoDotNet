<!-- start: header -->
<header class="header">
    <div class="logo-container">
        <a href="../" class="logo">
            <img src="~/Content/assets/images/logo.png" height="35" alt="C POS" />           
        </a>
        <div class="visible-xs toggle-sidebar-left" data-toggle-class="sidebar-left-opened" data-target="html" data-fire-event="sidebar-left-opened">
            <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
        </div>
    </div>

    <!-- start: search & user box -->
    <div class="header-right">

        <span class="separator"></span>

        <div id="userbox" class="userbox">
            <a href="#" data-toggle="dropdown">
                <figure class="profile-picture">                    
                    <img src="~/Content/assets/images/user.jpg" alt="@Session["DisplayName"].ToString()" class="img-circle" data-lock-picture="~/Content/assets/images/!logged-user.jpg" />
                </figure>
                <div class="profile-info" data-lock-name="@Session["DisplayName"].ToString()" data-lock-email="hello@softifytech.com">
                    <span class="name">@Session["DisplayName"].ToString()</span>
                    @*<span class="role">Administrator</span>*@
                </div>

                <i class="fa custom-caret"></i>
            </a>

            <div class="dropdown-menu">
                <ul class="list-unstyled">
                    <li class="divider"></li>
                    <li>
                        <a role="menuitem" tabindex="-1" href="#"><i class="fa fa-user"></i> My Profile</a>
                    </li>                    
                    <li>
                        <a role="menuitem" tabindex="-1" href="@Url.Action("Logout", "Login")"><i class="fa fa-power-off"></i> Logout</a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
    <!-- end: search & user box -->
</header>
<!-- end: header -->


