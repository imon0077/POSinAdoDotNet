@model SoftifyFoodPOSNew.Models.LoginCategory
@using System.Data;

@{
    DataRow dr = (DataRow)ViewBag.LoginCategory;
    ViewBag.Title = "Details";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
   <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Login Category - Details</h3>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.CatId)
            <div class="row">
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.CatName, new { @class = "control-label pull-right" })
                    </div>
                    <div class="col-md-10">
                        @Html.Label(@dr["CatName"].ToString(), new { @class = "control-label" })
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.ParentId, new { @class = "control-label pull-right" })
                    </div>
                    <div class="col-md-4">
                        @Html.Label(@dr["parent"].ToString(), new { @class = "control-label" })
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.IsParent, new { @class = "control-label pull-right" })
                    </div>
                    <div class="col-md-4">
                        @Html.Label(@dr["IsParent"].ToString(), new { @class = "control-label" })
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.IsInactive, new { @class = "control-label pull-right" })
                    </div>
                    <div class="col-md-4">
                        @Html.Label(@dr["IsInactive"].ToString(), new { @class = "control-label" })
                    </div>
                </div>
            </div>
            <br />
        </div>
        <div class="panel-footer clearfix">
            <div>
                <div class="col-md-2">
                    @Html.ActionLink("Edit", "Edit", new { id = @dr["CatId"].ToString() }, new { @class = "btn btn-warning btn-block" })
                </div>
                <div class="col-md-2">
                    @Html.ActionLink("Delete", "Delete", new { id = @dr["CatId"].ToString() }, new { @class = "btn btn-danger btn-block" })
                </div>
                <div class="col-md-2">
                    @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-info btn-block" })
                </div>
            </div>
        </div>
    </div>

}
